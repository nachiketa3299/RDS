PROJECT_NAME = "RDS"
PROJECT_BRIEF = "Data Structure & Algorithms in C++"

DOXYFILE_ENCODING = EUC-KR

INPUT = .\include .\src # .\test\include .\test\src
RECURSIVE = YES
INPUT_ENCODING = UTF-8

OUTPUT_DIRECTORY = .\docs\generated
OUTPUT_LANGUAGE = Korean-en

FILE_PATTERNS = *.h *.hpp *.cpp

MARKDOWN_SUPPORT = YES
USE_MATHJAX = YES

CALL_GRAPH = YES # 함수 호출 그래프
CALLER_GRAPH = YES # 함수 호출자 그래프

DOT_PATH = "E:\Graphviz\bin"
HAVE_DOT = YES
CLASS_DIAGRAMS = YES # 클래스 다이어그램 포함
GRAPHICAL_HIERARCHY = YES # 그래픽으로 그림

INLINE_SOURCES = YES # 소스 코드를 문서에 포함
CREATE_SUBDIRS = YES # 생성되는 도큐먼트를 하위 디렉터리에 정리

EXTRACT_ALL = YES # 모든 파일을 추출
EXTRACT_PRIVATE = YES # private 멤버도 추출

BUILTIN_STL_SUPPORT = YES # STL 지원


# Output Settings

GENERATE_TREEVIEW = YES